<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffff"
    android:paddingEnd="0dp"
    android:paddingStart="0dp">

   <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/parent"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1"
            android:background="#ffffffff"
            android:id="@+id/nothing"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sensor Teste"
                android:id="@+id/sensor1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:background="#ffffe800"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/sensorOne"
                android:layout_gravity="center_horizontal"
                android:textColor="#ff676767" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="X: "
                    android:id="@+id/xId"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Z: "
                    android:id="@+id/zId"
                    android:layout_gravity="left|bottom"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Y: "
                    android:id="@+id/yId"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#000000" />

                <Button
                    android:layout_width="76dp"
                    android:layout_height="match_parent"
                    android:text="Reset"
                    android:id="@+id/reset"
                    android:layout_gravity="right|center_vertical" />
            </FrameLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/sensor2"
                android:text="Sensor Escolhido"
                android:layout_gravity="center_horizontal"
                android:editable="false"
                android:gravity="center_vertical|center_horizontal"
                android:background="#ffffe800"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/sensorTwo"
                android:layout_gravity="center_horizontal"
                android:textColor="#ff676767" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Mx: "
                    android:id="@+id/mxId"
                    android:layout_gravity="left|top"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="My: "
                    android:id="@+id/myId"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Mz: "
                    android:id="@+id/mzId"
                    android:layout_gravity="left|bottom"
                    android:textColor="#000000" />

            </FrameLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView4"
                android:text="Sensores DisponÃ­veis"
                android:editable="false"
                android:gravity="center_vertical|center_horizontal"
                android:background="#ffffe800"
                android:textColor="#000000" />
            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/child"
                android:layout_width="fill_parent"
                android:layout_height="310dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="147dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/layoutButton">
                </LinearLayout>
            </ScrollView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView3"
                android:text="GPS"
                android:editable="false"
                android:gravity="center_vertical|center_horizontal"
                android:background="#ffffe800"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Latitude: "
                android:id="@+id/textView"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/latitudeValue"
                android:textColor="#ff676767" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Longitude:"
                android:id="@+id/textView2"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/longitudeValue"
                android:textColor="#ff676767" />

        </LinearLayout>
   </ScrollView>
</RelativeLayout>
